{
  "name": "business-admin",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy-static-assets",
    "build-ts": "tsc",
    "debug-build": "npm run build && npm run start",
    "cont-int": "npm run test && npm run-script lint",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "dev": "nodemon app/server.ts",
    "test": "NODE_ENV=ci jest --detectOpenHandles --forceExit --verbose --testTimeout=500000",
    "watch-test": "jest --watchAll --detectOpenHandles --forceExit --coverage --verbose --testTimeout=7000",
    "watch:no-c": "jest --watchAll --detectOpenHandles --forceExit --verbose --testTimeout=500000",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "lint:ts": "eslint --ext=jsx,ts app",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:write": "npm run prettier:base -- --write \"app/**/*.{ts,tsx}\"",
    "serve": "npm run build && node dist/app/server.js",
    "start": "npm run build && node dist/app/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run dev\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run debug\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/app/server.js",
    "watch-d": "export DEBUG=*",
    "debug": "export DEBUG=* && npm run watch",
    "watch-build": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-d\" \"npm run watch-node\""
  },
  "keywords": [],
  "author": "Oluwabukola Tina",
  "license": "ISC",
